<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
    <%= form_tag users_path do %>
      <div class="form users-form">
        <div class="form-body">
          <p>ユーザー名</p>
          <!-- 次の行に１行の入力フォームを作成するコードを記述しましょう。 -->
            <input name="name">
          <p>メールアドレス</p>
          <!-- 次の行に１行の入力フォームを作成するコードを記述しましょう。 -->
            <input name="email">
          <input type="submit" value="新規登録">
        </div>
      </div>
    <% end %>
  </div>
</div>