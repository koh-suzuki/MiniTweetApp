<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= image_tag "/user_images/#{@user.image}" %>
      <!-- 次の行に、ユーザー名を出力するコードを記述しましょう。 -->
      <h2><%= @user.name %></h2>
      <!-- 次の行に、ユーザーのメールアドレスを出力するコードを記述しましょう。 -->
      <p><%= @user.email %></p>
       <!-- 次の行のコードを編集してリンクを完成させましょう -->
       <% if @user.id == @current_user.id %>
        <%= link_to "ユーザー情報を編集する", edit_user_path(@user), class: "user_edit_button" %>
       <% end %>
    </div>
  </div>
</div>